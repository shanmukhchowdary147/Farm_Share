<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />



    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/minitractor"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/minitractor"
            />

        <ImageView
            android:id="@+id/crawlertractor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/crawlertractor"
            />

        <ImageView
            android:id="@+id/trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trailer"
            />

        <ImageView
            android:id="@+id/motorcultivator"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/motorcultivator"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/rotarytiller"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/rotarytiller"
            />

        <ImageView
            android:id="@+id/seeder"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/seeder"
            />

        <ImageView
            android:id="@+id/harvester"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/harvester"
            />

        <ImageView
            android:id="@+id/mowing"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/mowing"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/irrigationmachine"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/irrigationmachine"
            />

        <ImageView
            android:id="@+id/loader"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/loader"
            />

        <ImageView
            android:id="@+id/truck"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/truck"
            />

        <ImageView
            android:id="@+id/others"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/others"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>



</RelativeLayout>